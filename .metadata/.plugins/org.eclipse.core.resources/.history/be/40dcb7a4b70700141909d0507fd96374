var states = ["Alabama", "California", "Florida", "Louisiana", "Maine", "New Mexico", "Maine"],
	i=0,
	j=states.length,
	data = "Test Data";
	
var nextData = function(){
	infoDisplay = null;
	if(i === j){
		i = 0
		data=states[i]
	}
	else{
		i++
		data=states[i]
	};
	var statesLabel = Ti.UI.createLabel({
		text: data,
		color: "#000",
		font: {fontSize: 22, fontFamily: "Arial", fontWeight: "bold"},
		align: "center"
	});
	infoDisplay.add(statesLabel);
};


var nextData = function(){
	infoDisplay = null;
	if(i === 0){
		i = j
		data=states[i]
	}
	else{
		i--
		data=states[i]
	};
	var statesLabel = Ti.UI.createLabel({
		text: data,
		color: "#000",
		font: {fontSize: 22, fontFamily: "Arial", fontWeight: "bold"},
		align: "center"
	});
	infoDisplay.add(statesLabel);
};

buttonNext.addEventListener("click", nextData);
buttonPrevious.addEventListener("click", nextData);

