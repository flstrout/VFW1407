// Project 1 - Cycle through an array

Ti.UI.setBackgroundColor("White")

var appWindow = Ti.UI.createWindow({
	backgroundColor: "#f0ead6",
});

var infoDisplayBox = Ti.UI.createView({
	backgroundColor: "00008b",
	borderRadius: 8,
	width: "85%",
	height: 100,
	top: 35
});

var buttonForward = Ti.UI.createView({
	backgroundColor: "Green",
	borderRadius: 8,
	width: "40%",
	right: 20,
	height: 65,
	top: infoDisplayBox.top + infoDisplayBox.height + 20
});

var buttonBack = Ti.UI.createView({
	backgroundColor: "Green",
	borderRadius: 8,
	width: "40%",
	left: 20,
	height: 65,
	top: infoDisplayBox.top + infoDisplayBox.height + 20
});

appWindow.add(infoDisplayBox, buttonForward, buttonBack);
appWindow.open();
