Ti.UI.setBackgroundColor('#000');

var tableWindow = Ti.UI.createWindow({
	backgroundColor: "#ccc"
});

var titleView = Ti.UI.createView({
	backgroundColor: "#fff",
	top: 0,
	hieght: 55
});

var border = Ti.UI.createView({
	backgroundColor: "#333",
	top: titleView.bottom,
	left: 5,
	right: 5,
	height: 1
});

var titleLabel = Ti.UI.createLabel({
	text: "Secondary Tasks",
	font: {fontSize: 20, fontFamily: "Arial", fontWeight: "bold"},
	top: titleView.bottom - 30,
	width: "100%",
	textAlign: "center"
});

titleView.add(titleLabel);
tableWindow.add(titleView, border);
tableWindow.open();
