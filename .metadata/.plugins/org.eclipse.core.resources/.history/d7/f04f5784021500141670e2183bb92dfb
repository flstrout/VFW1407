Titanium.UI.setBackgroundColor('#000');

var menuWindow = Ti.UI.createWindow({
	title: "Menu"
});

var banner = Ti.UI.createLabel({
	text: "Top Assassin",
	font: {fontSize: 28, fontFamily: "AmericanTypewriter", fontWeight: "bold"},
	color: "#f00",
	textAlign: "center",
	top: 20,
	height: 30,
	width: "100%"
});

var logo = Ti.UI.createImageView({
	top: banner.top + banner.height + 25,
	image: "EagleLogo.bmp",
	height: 240
});

var assetsButton = Ti.UI.createLabel({
	backgroundColor: "#d00",
	text: "Assets",
	font: {fontSize: 22, fontFamily: "Arial", fontWeight: "bold"},
	color: "#000",
	textAlign: "center",
	top: logo.top + logo.height + 25,
	height: 75,
	width: "100%"
});

var agentsButton = Ti.UI.createLabel({
	backgroundColor: "#fff",
	text: "Agents",
	font: {fontSize: 22, fontFamily: "Arial", fontWeight: "bold"},
	color: "#000",
	textAlign: "center",
	top: assetsButton.top + assetsButton.height + 2,
	height: 75,
	width: "100%"
});

var missionsButton = Ti.UI.createLabel({
	backgroundColor: "#039",
	text: "Missions",
	font: {fontSize: 22, fontFamily: "Arial", fontWeight: "bold"},
	color: "#000",
	textAlign: "center",
	top: agentsButton.top + agentsButton.height + 2,
	height: 75,
	width: "100%"
});

menuWindow.add(banner, logo, assetsButton, agentsButton, missionsButton);
menuWindow.open();
