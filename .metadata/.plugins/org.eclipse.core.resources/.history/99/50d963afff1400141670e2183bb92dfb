Titanium.UI.setBackgroundColor('#000');

var menuWindow = Ti.UI.createWindow({
	title: "Menu"
});

var logo = Ti.UI.createImageView({
	top: 50,
	image: "EagleLogo.bmp",
	height: 240
});

var assetsButton = Ti.UI.createLabel({
	backgroundColor: "#f09",
	text: "Assets",
	font: {fontSize: 22, fontFamily: "Arial", fontWeight: "bold"},
	color: "#000",
	textAlign: "center",
	top: logo.top + logo.height,
	height: 75,
	width: "100%"
});

menuWindow.add(logo, assetsButton);
menuWindow.open();
